<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" tools:ignore="RedundantNamespace">
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="25%"
                        android:centerColor="@color/transparent"
                        android:startColor="@android:color/holo_blue_bright"
                        android:endColor="@color/transparent"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" tools:ignore="RedundantNamespace">
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="75%"
                        android:centerColor="@color/transparent"
                        android:startColor="@color/transparent"
                        android:endColor="@android:color/holo_blue_bright"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" tools:ignore="RedundantNamespace">
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="0"
                        android:centerX="90%"
                        android:centerColor="@color/transparent"
                        android:startColor="@color/transparent"
                        android:endColor="@android:color/holo_blue_bright"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" tools:ignore="RedundantNamespace">
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="180"
                        android:centerX="90%"
                        android:centerColor="@color/transparent"
                        android:startColor="@color/transparent"
                        android:endColor="@android:color/holo_blue_bright"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="12dp" android:right="12dp" android:top="12dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" tools:ignore="RedundantNamespace">
                    <corners
                        android:radius="50dp"
                        />
                    <size
                        android:width="270dp"
                        android:height="70dp"
                        />
                    <stroke
                        android:width="4dp"
                        android:color="#fff"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>